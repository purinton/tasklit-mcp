{
    "name": "@purinton/mcp-server-template",
    "type": "module",
    "version": "1.0.0",
    "description": "A Model Context Protocol (MCP) server template for building AI and automation tool APIs.",
    "main": "mcp-server-template.mjs",
    "scripts": {
        "start": "node mcp-server-template.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/mcp-server-template.git"
    },
    "keywords": [
        "mcp-server",
        "mcp-server-template",
        "ai-tools",
        "automation",
        "nodejs",
        "template"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/mcp-server-template/issues"
    },
    "homepage": "https://github.com/purinton/mcp-server-template#readme",
    "devDependencies": {
        "jest": "^30.0.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/mcp-server": "^1.0.20",
        "dotenv": "^16.5.0"
    }
}
