{
    "name": "@purinton/tasklit-mcp",
    "type": "module",
    "version": "1.0.1",
    "description": "A Model Context Protocol (MCP) server for task management, providing tools for creating, updating, searching, and tracking tasks via API for AI and automation workflows.",
    "main": "tasklit-mcp.mjs",
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/tasklit-mcp.git"
    },
    "keywords": [
        "tasklit-mcp",
        "task management",
        "MCP server",
        "automation",
        "AI tools",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/tasklit-mcp/issues"
    },
    "homepage": "https://github.com/purinton/tasklit-mcp#readme",
    "devDependencies": {
        "jest": "^30.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.10",
        "@purinton/mcp-server": "^1.0.14",
        "dotenv": "^16.5.0",
        "node-fetch": "^3.3.2"
    }
}